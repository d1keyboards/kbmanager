{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./electron",
		"esModuleInterop": true,
		"lib": ["es2020"],
		"module": "commonjs",
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist", "build"]
}
