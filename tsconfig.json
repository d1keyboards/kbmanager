{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"lib": ["es2020", "DOM"],
		"module": "es2020",
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noEmit": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"paths": {
			"~/*": ["./src/app/*"],
			"assets/*": ["./assets/*"]
		}
	},
	"exclude": ["node_modules", "dist", "build"]
}
